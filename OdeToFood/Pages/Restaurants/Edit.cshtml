@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Restaurant.Name</h1>
<form method="post">
    <div class="form-group">
        <input type="hidden" asp-for="Restaurant.Id"/>
        <label asp-for="Restaurant.Name">Name:</label>
        <input asp-for="Restaurant.Name" /><br />
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Location">Location:</label>
        <input asp-for="Restaurant.Location" /><br />
        <span class="text-danger" asp-validation-for="Restaurant.Location"></span>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Cuisine">Cuisine:</label>
        <input asp-for="Restaurant.Cuisine" /><br />
        <span class="text-danger" asp-validation-for="Restaurant.Cuisine"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Save"/><br />
    <a asp-page="./List">Back</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
